{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "keyVaultName":{
            "type": "string"
        },
        "objectId":{
            "type": "string"
        },
        "servicePrincipalClientSecret":{
            "type":"securestring" 
        },
        "workspaceName":{
            "type":"string" 
        },
        "workspaceRegion":{
            "type": "string"
        },
        "sku":{
            "type":"string" 
        },
        "VNET RG Name":{
            "type":"string" 
        },
        "VNET Name":{
            "type":"string" 
        },
        "Subnet Name":{
            "type":"string" 
        },
        "_artifactsLocation": {
            "type": "string",
            "defaultValue": "https://raw.githubusercontent.com/hanuravim/demo-in/master/"
        }
       
    },
    "variables": {
        "configuration":{
            "keyVault":"[concat(parameters('_artifactsLocation'),'keyVault.json')]",
            "OMS":"[concat(parameters('_artifactsLocation'),'OMS.json')]"
        }
        
         
       
    },
    "resources": [
        {
            "apiVersion": "2018-05-01",
            "name": "keyvault",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "contentVersion": "1.0.0.0",
                    "uri": "[variables('configuration').keyVault]"
                },
                "parameters": {
                    "keyVaultName": {
                        "value": "[parameters('keyVaultName')]"
                    },
                    "objectId": {
                        "value": "[parameters('objectId')]"
                    },
                    "servicePrincipalClientSecret": {
                        "value": "[parameters('servicePrincipalClientSecret')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2018-05-01",
            "name": "OMS",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "contentVersion": "1.0.0.0",
                    "uri": "[variables('configuration').OMS]"
                },
                "parameters": {
                    "workspaceName": {
                        "value": "[parameters('workspaceName')]"
                    },
                    "workspaceRegion":{
                        "value": "[parameters('workspaceRegion')]"
                    },
                    "sku": {
                        "value": "[parameters('sku')]"
                    }
                }
            }
        }
       
    ],
    "outputs": {}
}
